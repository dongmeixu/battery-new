<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_searchResult_head"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp"
        >

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/searchResult_head_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:stretchColumns="0">

            <TableRow android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_battery"
                            android:id="@+id/user_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="授权账户"
                            android:gravity="center_vertical"
                            android:textSize="6pt"
                            android:id="@+id/user_name" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="授权企业：深圳比克"
                        android:textSize="6pt"
                        android:id="@+id/user_company" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="操作员工：0003"
                        android:textSize="6pt"
                        android:id="@+id/user_staff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="操作日期：2016年8月3日 "
                        android:textSize="6pt"
                        android:id="@+id/data" />

                </LinearLayout>

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_gravity="center"
                    android:id="@+id/searchResult_head_Image"
                    android:src="@drawable/ic_battery" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出售车架号："
                    android:textSize="6pt"
                    android:id="@+id/car_textView" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_border_layout"
                    android:hint="请输入车架号"
                    android:textSize="6pt"
                    android:id="@+id/car_editText"
                    android:layout_weight="1" />


            </LinearLayout>

            <TextView
                android:id="@+id/scan_button"
                style="@style/AutoWrapTv"
                android:text="开始扫描" />

        </TableLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>